@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal text-center">
    <h4 class="text-classic text-oblique text-bold">Регистрация</h4>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="col-md-offset-2">
                    <input asp-for="Email" class="form-control form-control-small" placeholder="Email" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2">
                    <input asp-for="Password" class="form-control form-control-small" placeholder="Password" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2">
                    <input asp-for="ConfirmPassword" class="form-control form-control-small" placeholder="ConfirmPassword" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2">
                    <button type="submit" class="btn btn-registration btn-sm">Зарегистрироваться</button>
                </div>
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-primary"></div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
